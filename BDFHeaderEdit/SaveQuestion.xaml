<Window x:Class="BDFHeaderEdit.SaveQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Question" Width="300" SizeToContent="Height" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterOwner">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="16" TextWrapping="Wrap" FontWeight="SemiBold" Margin="4">There are unsaved changes. Do you wish to save updated BDF header?</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button FontSize="14" FontWeight="Bold" Width="80" Height="32" Margin="4" Click="Button_Click">Yes</Button>
                <Button FontSize="14" FontWeight="Bold" Width="80" Height="32" Margin="4" IsDefault="True" Click="Button_Click">No</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
