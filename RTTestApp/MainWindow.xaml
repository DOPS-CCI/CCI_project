<Window x:Class="RTTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" WindowStartupLocation="CenterScreen"
        Title="Technician Window" Height="350" Width="525" FontSize="16">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <TextBlock Name="Count" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="8"/>
        <Button Name="Start">Start Experiment</Button>
        <Button Name="Next" IsEnabled="False">Next Trial</Button>
        <Button Name="End" IsEnabled="False">End Experiment </Button>
        <TextBlock Name="Results" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
