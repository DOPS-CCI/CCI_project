<Window x:Class="ASCConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ASCConverter" Height="auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox Height="350" HorizontalAlignment="Left" Margin="15" Name="EpisodeEntries" VerticalAlignment="Top" Width="860" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
        <Button Name="AddSpec" Grid.Row="1" Width="24" Height="24" FontSize="13" FontWeight="Bold" HorizontalAlignment="Left" Margin="15,0,0,0" Click="AddSpec_Click">+</Button>
        <Button Name="RemoveSpec" Grid.Row="1" Width="24" Height="24" FontSize="13" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,0,0,0" IsEnabled="False" Click="RemoveSpec_Click">-</Button>
        </StackPanel>
    </Grid>
</Window>
