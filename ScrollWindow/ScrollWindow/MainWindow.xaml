<Window x:Class="ScrollWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Line Name="MidLine" Grid.Row="0" X1="0" X2="0" Y1="0" Y2="0" VerticalAlignment="top" Panel.ZIndex="1" Stroke="Black" IsHitTestVisible="False" />
        <Line Name="IndexLine" Grid.Row="0" X1="0" X2="0" Y1="0" Y2="0" Panel.ZIndex="1" HorizontalAlignment="Left" VerticalAlignment="Stretch" IsHitTestVisible="False" Stroke="Black" />
        <ScrollViewer Name="Viewer" Grid.Row="0" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible"
                      SizeChanged="ScrollViewer_SizeChanged" ScrollChanged="Viewer_ScrollChanged" MouseUp="Viewer_MouseUp" MouseMove="Viewer_MouseMove" MouseLeave="Viewer_MouseLeave" PreviewMouseDown="Viewer_MouseDown">
            <Line X1="0" X2="20000" Y1="0" Y2="220" Stroke="Red" IsHitTestVisible="False" />
        </ScrollViewer>
        <WrapPanel Name="InfoPanel" Grid.Row="1" Height="80" VerticalAlignment="Bottom" Orientation="Vertical">
            <TextBlock Name="Loc" Margin="5" FontSize="14">0</TextBlock>
        </WrapPanel>
    </Grid>
</Window>
