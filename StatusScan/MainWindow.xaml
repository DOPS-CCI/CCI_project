<Window x:Class="StatusScan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MinHeight="800" MinWidth="530" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <ListBox Height="Auto" Width="500" ItemsSource="{Binding Path=entries, Mode=OneWay}" HorizontalAlignment="Center" Margin="8,8,8,4" Name="listBox1" VerticalAlignment="Top" HorizontalContentAlignment="Left" SelectionChanged="listBox1_SelectionChanged" />
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <TextBlock Height="Auto" HorizontalAlignment="Center" Margin="8,0,8,8" Name="textBlock1" Text="TextBlock" Width="500"> </TextBlock>
        </ScrollViewer>
    </Grid>
</Window>
