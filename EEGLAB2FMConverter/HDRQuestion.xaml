<Window x:Class="EEGLAB2FMConverter.HDRQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Use RWNL HDR?" Width="300" FontSize="18" FontWeight="Bold" SizeToContent="Height"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="8"/>
            <EventSetter Event="Click" Handler="Button_Click"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Window.Resources>
    <Border BorderBrush="Gray" BorderThickness="4">
        <StackPanel Orientation="Vertical">
            <TextBlock Name="Question"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="Yes">Yes</Button>
                <Button>No</Button>
                </StackPanel>
        </StackPanel>
    </Border>
</Window>
