<Window x:Class="SecondaryWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Secondary" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="0" Name="TB2" TextChanged="TB2_TextChanged" TextWrapping="Wrap"></TextBox>
        <TextBlock Grid.Row="1" Name="TBlock2" TextWrapping="Wrap"></TextBlock>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="Send" Width="100" Margin="4" Click="Send_Click">Send</Button>
        </StackPanel>
    </Grid>
</Window>
