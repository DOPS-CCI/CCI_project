<Window x:Class="Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="600"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Name="ElectrodeName" FontSize="160" Grid.Row="0" Text="Nasion" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" />
        <StackPanel Orientation="Horizontal" Margin="4">
            <TextBlock Name="output3"/>
        </StackPanel>
        <TextBlock Name="output1" Grid.Row="1" Margin="4"/>
        <TextBlock Name="output2" Grid.Row="2" Margin="4" />
        <Button Name="Start" Grid.Row="3" Width="120" Margin="4" Click="Start_Click">START</Button>
        <Button Name="Stop" Grid.Row="4" Width="120" Margin="4" Click="Stop_Click">STOP</Button>
    </Grid>
</Window>
