<Window x:Class="PreprocessDataset.PreprocessingWorker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preprocessing Worker" Width="400" 
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Closing="Window_Closing"
        FontSize="16" FontWeight="Bold" SizeToContent="Height">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8">
            <TextBlock Text="Current processing phase: "/>
            <TextBlock Name="ProcessingPhase"/>
        </StackPanel>
        <ProgressBar Name="Progress" Height="20" Width="350" Margin="8"/>
        <Button Content="Cancel" HorizontalAlignment="Center" VerticalAlignment="Center " Margin="8"  Width="75" IsCancel="True" Click="Cancel_Click"/>

    </StackPanel>
</Window>
