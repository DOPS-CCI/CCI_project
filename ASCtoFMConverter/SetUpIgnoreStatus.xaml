<Window x:Class="ASCtoFMConverter.SetUpIgnoreStatus"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ignore Status Setup" FontSize="14" Height="120" Width="300">
    <StackPanel Orientation="Vertical">
        <RadioButton IsChecked="True" Name="typeTimes" Checked="typeTimes_Checked" GroupName="RB">Use clock times in Events (BDF reference)</RadioButton>
        <StackPanel Orientation="Horizontal">
            <RadioButton VerticalAlignment="Center" Name="typeOffset" Checked="typeOffset_Checked" GroupName="RB">Assume offset to first Event:</RadioButton>
            <TextBox Margin="4" Width="60" TextChanged="TextBox_TextChanged" IsEnabled="{Binding ElementName=typeOffset, Path=IsChecked}" Name="offsetValueTB">0</TextBox>
            <TextBlock VerticalAlignment="Center">secs</TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Width="80" Height="24" Margin="4" Name="Cancel" IsCancel="True" Click="Cancel_Click">Cancel</Button>
            <Button Width="80" Height="24" Margin="4" Name="Continue" Click="Continue_Click" IsDefault="True">Continue</Button>
        </StackPanel>
    </StackPanel>
</Window>
