<Window x:Class="Laplacian.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Laplacian: Processing type" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" SizeToContent="Height" Width="500">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="120"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="12"/>
            <EventSetter Event="Click" Handler="Button_Click"/>
        </Style>
    </Window.Resources>
    <StackPanel Orientation="Vertical">
        <TextBlock FontSize="16" FontWeight="Bold" TextWrapping="Wrap" Margin="12">Choose either RWNL dataset processing or BDF or FILMAN file processing:</TextBlock>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Tag="D">RWNL dataset</Button>
            <Button Tag="F">File processing</Button>
            <Button Tag="Q">Quit</Button>
        </StackPanel>
    </StackPanel>
</Window>
